<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="45dp"
    tools:context=".PreviewActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="#EFEB9E"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="8dp"
        android:id="@+id/card_view_activity_preview">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/this_will_be_the_project_view_of_my_project_i_am_gonna_write_long_message_in_order_to_check_it_for_any_reason"
            android:layout_margin="15dp"
            android:textSize="20sp"
            android:id="@+id/text_view_preview_message"
            android:fontFamily="sans-serif-light"
            android:textColor="#424040"/>


    </androidx.cardview.widget.CardView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/send_message"
        android:layout_margin="24dp"
        android:id="@+id/button_send_message"/>










</LinearLayout>

